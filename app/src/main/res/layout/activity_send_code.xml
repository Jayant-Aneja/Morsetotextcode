<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/wp5048659"
    tools:context=".SendCode">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="388dp"
        android:layout_height="87dp"
        android:layout_marginTop="128dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="MORSE TO TEXT"
        android:textColor="#DDFDFDF9"
        android:textColorHint="#EA1717"
        android:textColorLink="#ED1919"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/send"
        android:layout_width="381dp"
        android:layout_height="55dp"
        android:layout_marginTop="100dp"
        android:background="#80FFFFFF"
        android:text="ENCODE MORSE CODE"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/receive"
        android:layout_width="369dp"
        android:layout_height="53dp"
        android:layout_marginTop="100dp"
        android:background="#80FFFFFF"
        android:text="DECODE MORSE CODE"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/send" />
</androidx.constraintlayout.widget.ConstraintLayout>